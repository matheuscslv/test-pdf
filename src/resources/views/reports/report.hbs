  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
  <title>Relatório</title>

  <style>
    * {
      font-family: Roboto;
    }

    .color-red {
      color: #f00;
    }
  </style>
</head>

<body>
  <div>
    <div style="display: flex; align-items: center; justify-content: center;">
      <img style="width: 10%; height: 20%;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/63/Bras%C3%A3o_do_Amap%C3%A1.svg/1200px-Bras%C3%A3o_do_Amap%C3%A1.svg.png" alt="imagem">
    </div>

    <div style="display: flex; align-items: center; justify-content: center;">
      <h1 style="font-size: 12px; font-weight: normal; margin-bottom: 0px;">GOVERNO DO ESTADO DO AMAPÁ</h1>
    </div>
    <div style="display: flex; align-items: center; justify-content: center;">
      <h1 style="font-size: 12px; font-weight: normal; margin-bottom: 0px;">SECRETÁRIA DE ESTADO DA SEGURANÇA PÚBLICA</h1>
    </div>
    <div style="display: flex; align-items: center; justify-content: center;">
      <h1 style="font-size: 12px; font-weight: normal; margin-bottom: 0px;">INSTITUTO DE IDENTIFICAÇÃO CIVIL E CRIMINAL</h1>
    </div>
  </div>

  <div style="display: flex; align-items: center; justify-content: center;">
    <h1 style="font-size: 28px; font-weight: bold;">PESQUISA DE INDIVÍDUO</h1>
  </div>

  <h1 style="font-size: 28px; font-weight: bold;">{{ result.nomeRegistroCivil }}</h1>

  <div>
    <h1 style="font-size: 20px; font-weight: bold;">Dados Civis</h1>
    <div style="border-top: 1px solid #000; margin-bottom: 10px;"></div>

    <div style="display: flex; justify-content: space-between;">
      <div>
        {{#ifYes options.cpf}}
        <h1 style="font-size: 16px; font-weight: normal;"><b>CPF: </b>{{ result.cpf }}</h1>
        {{/ifYes}}

        {{#ifYes options.rg}}
        <h1 style="font-size: 16px; font-weight: normal;"><b>RG: </b>{{ result.rg }}</h1>
        {{/ifYes}}
        
        {{#ifYes options.endereco}}
        <h1 style="font-size: 16px; font-weight: normal;"><b>Endereço: </b>{{ result.endereco }}</h1>
        {{/ifYes}}

        {{#ifYes options.nome_mae}}
        <h1 style="font-size: 16px; font-weight: normal;"><b>Nome da mãe: </b>{{ result.nome_mae }}</h1>
        {{/ifYes}}
      </div>

      <img style="width: 20%; height: 30%;" src="data:image/png;base64,{{ photo }}" alt="imagem">
    </div>

